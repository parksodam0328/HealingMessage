<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="kr.hs.emirim.parksodam.healingmessage.myprofile.MyProfileFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:background="@drawable/profile_back">

        <ImageView
            app:srcCompat="@color/colorPrimary"
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="10dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/prof_name"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:hint="닉네임" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/prof_feel"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:hint="나의 기분" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/message_back"
            android:id="@+id/received_message"
            android:layout_marginTop="301dp"
            android:layout_height="48dp" />

        <ImageView
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/message_send"
            android:id="@+id/send_message"
            android:layout_height="48dp" />

        <!--<Button-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="48dp"-->
            <!--android:id="@+id/fortune_cookie1"-->
            <!--android:paddingTop="0dp"-->
            <!--android:background="@drawable/message_send"/>-->

        <!--<ImageButton-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="52dp"-->
            <!--app:srcCompat="@drawable/message_send"-->
            <!--android:id="@+id/fortune_cookie"-->
            <!--android:onClick="onClick"/>-->

        <ImageView
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/message_send"
            android:id="@+id/fortune_cookie"
            android:layout_height="48dp"
            android:clickable="true"/>

    </LinearLayout>
</FrameLayout>
